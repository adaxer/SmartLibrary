<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SmartLibrary.Avalonia.App"
             RequestedThemeVariant="Default"
            xmlns:vm="using:SmartLibrary.Common.ViewModels"
            xmlns:v="using:SmartLibrary.Avalonia.Views"          xmlns:sys="clr-namespace:System;assembly=System.Runtime">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush Color="Yellow" x:Key="MarkerBrush" />
        <sys:Double x:Key="ButtonMinWidth" >180</sys:Double>
    </Application.Resources>

    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AboutViewModel}">
            <v:AboutView/>
        </DataTemplate>
    </Application.DataTemplates>

</Application>