<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="using:SmartLibrary.Core.Localization"
             xmlns:vm="using:SmartLibrary.Common.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="280"
             x:Class="SmartLibrary.Avalonia.Views.SearchView"
             x:DataType="vm:SearchViewModel">
    <Grid RowDefinitions="Auto, *">
        <DockPanel >
            <Button Content="Start" DockPanel.Dock="Right" Command="{Binding SearchCommand}" />
            <TextBox Text="{Binding SearchText}" Watermark="Searchtext" />
        </DockPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Books}" DisplayMemberBinding="{Binding Info.Title}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
